@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #7e8ba3 100%);
        padding: 100px 0;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><rect width="2" height="2" fill="white" opacity="0.1"/></svg>') repeat;
            opacity: 0.3;
        }

    /* Animated Floating Boxes */
    .floating-box {
        position: absolute;
        background: rgba(255,255,255,0.1);
        border: 2px solid rgba(255,255,255,0.2);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        animation: float 6s ease-in-out infinite;
    }

    .box-1 {
        width: 80px;
        height: 80px;
        top: 15%;
        right: 15%;
        animation-delay: 0s;
    }

    .box-2 {
        width: 60px;
        height: 60px;
        top: 60%;
        right: 10%;
        animation-delay: 2s;
    }

    .box-3 {
        width: 100px;
        height: 100px;
        top: 35%;
        right: 25%;
        animation-delay: 4s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    /* 3D Warehouse Illustration */
    .warehouse-illustration {
        position: relative;
        width: 100%;
        height: 400px;
    }

    .warehouse-building {
        position: absolute;
        bottom: 20%;
        right: 10%;
        width: 300px;
        height: 250px;
        background: linear-gradient(135deg, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0.05) 100%);
        border: 3px solid rgba(255,255,255,0.3);
        border-radius: 10px;
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        animation: pulse 3s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .warehouse-roof {
        position: absolute;
        top: -50px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 0;
        border-left: 180px solid transparent;
        border-right: 180px solid transparent;
        border-bottom: 60px solid rgba(255,255,255,0.2);
    }

    .warehouse-door {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 120px;
        background: rgba(30, 60, 114, 0.5);
        border: 2px solid rgba(255,255,255,0.3);
        border-radius: 5px 5px 0 0;
    }

    .warehouse-window {
        position: absolute;
        width: 40px;
        height: 40px;
        background: rgba(255, 215, 0, 0.3);
        border: 2px solid rgba(255,255,255,0.4);
        border-radius: 5px;
        animation: blink 2s ease-in-out infinite;
    }

    .window-1 {
        top: 60px;
        left: 40px;
    }

    .window-2 {
        top: 60px;
        right: 40px;
        animation-delay: 1s;
    }

    @@keyframes blink {
        0%, 100% {
            opacity: 0.3;
        }

        50% {
            opacity: 1;
        }
    }

    /* Floating Icons */
    .floating-icon {
        position: absolute;
        color: rgba(255,255,255,0.6);
        font-size: 3rem;
        animation: floatIcon 4s ease-in-out infinite;
    }

    .icon-box {
        top: 20%;
        left: 15%;
        animation-delay: 0s;
    }

    .icon-truck {
        bottom: 25%;
        left: 8%;
        animation-delay: 1.5s;
    }

    .icon-chart {
        top: 45%;
        left: 20%;
        animation-delay: 3s;
    }

    @@keyframes floatIcon {
        0%, 100% {
            transform: translateY(0px);
            opacity: 0.6;
        }

        50% {
            transform: translateY(-15px);
            opacity: 1;
        }
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-section h1 {
        color: white;
        font-weight: 700;
        font-size: 3.5rem;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        margin-bottom: 20px;
    }

    .hero-section p {
        color: rgba(255,255,255,0.95);
        font-size: 1.3rem;
        line-height: 1.8;
        margin-bottom: 30px;
    }

    /* Feature Cards */
    .feature-card {
        background: white;
        border: none;
        border-radius: 15px;
        padding: 40px 30px;
        transition: all 0.4s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transform: scaleY(0);
            transition: transform 0.4s ease;
        }

        .feature-card:hover::before {
            transform: scaleY(1);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        font-size: 2.5rem;
        color: white;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .feature-card h4 {
        color: #1e3c72;
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .feature-card p {
        color: #5a6c7d;
        line-height: 1.7;
        font-size: 1.05rem;
    }

    /* Stats Section */
    .stats-section {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 80px 0;
        position: relative;
    }

    .stat-box {
        background: white;
        padding: 40px 20px;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

        .stat-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }

        .stat-box i {
            font-size: 3.5rem;
            margin-bottom: 20px;
            display: block;
        }

        .stat-box h3 {
            color: #1e3c72;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .stat-box p {
            color: #7f8c8d;
            font-size: 1.1rem;
            margin: 0;
        }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 80px 0;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .cta-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">ircle cx="50" cy="50" r="2" fill="white" opacity="0.1"/></svg>') repeat;
        }

        .cta-section h2 {
            font-weight: 700;
            font-size: 3rem;
            margin-bottom: 20px;
            position: relative;
            z-index: 1;
        }

        .cta-section p {
            font-size: 1.3rem;
            margin-bottom: 30px;
            opacity: 0.95;
            position: relative;
            z-index: 1;
        }

    /* Buttons */
    .btn-hero {
        padding: 15px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-hero-light {
        background: white;
        color: #1e3c72;
    }

        .btn-hero-light:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

    .btn-hero-outline {
        background: transparent;
        color: white;
        border: 2px solid white;
    }

        .btn-hero-outline:hover {
            background: white;
            color: #1e3c72;
            transform: translateY(-2px);
        }

    /* Section Titles */
    .section-title {
        color: #1e3c72;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 15px;
    }

    .section-subtitle {
        color: #7f8c8d;
        font-size: 1.2rem;
        margin-bottom: 50px;
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <!-- Floating Background Boxes -->
    <div class="floating-box box-1"></div>
    <div class="floating-box box-2"></div>
    <div class="floating-box box-3"></div>

    <!-- Floating Icons -->
    <i class="fas fa-boxes floating-icon icon-box"></i>
    <i class="fas fa-truck floating-icon icon-truck"></i>
    <i class="fas fa-chart-line floating-icon icon-chart"></i>

    <div class="container">
        <div class="row align-items-center hero-content">
            <div class="col-lg-7">
                <h1>
                    <i class="fas fa-warehouse mr-3"></i>DTHLogistics
                </h1>
                <p class="lead">
                    Hệ thống quản lý kho hàng thông minh cấp doanh nghiệp.
                    Tối ưu hóa quy trình nhập xuất, kiểm soát tồn kho theo thời gian thực,
                    và nâng cao hiệu suất vận hành logistics của bạn.
                </p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-hero btn-hero-light">
                        <i class="fas fa-tachometer-alt mr-2"></i>Vào hệ thống
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-hero btn-hero-light mr-3">
                        <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-hero btn-hero-outline">
                        <i class="fas fa-user-plus mr-2"></i>Đăng ký ngay
                    </a>
                }
            </div>
            <div class="col-lg-5">
                <!-- 3D Warehouse Illustration -->
                <div class="warehouse-illustration">
                    <div class="warehouse-building">
                        <div class="warehouse-roof"></div>
                        <div class="warehouse-window window-1"></div>
                        <div class="warehouse-window window-2"></div>
                        <div class="warehouse-door"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5 my-5">
    <div class="text-center mb-5">
        <h2 class="section-title">Tính năng nổi bật</h2>
        <p class="section-subtitle">Giải pháp toàn diện cho quản lý kho hàng hiện đại</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <h4>Quản lý sản phẩm</h4>
                <p>Theo dõi chi tiết thông tin, số lượng tồn kho, vị trí lưu trữ và lịch sử biến động của từng sản phẩm trong kho.</p>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-arrow-down"></i>
                </div>
                <h4>Nhập kho nhanh chóng</h4>
                <p>Ghi nhận phiếu nhập hàng từ nhà cung cấp, cập nhật tồn kho tự động với độ chính xác cao.</p>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-arrow-up"></i>
                </div>
                <h4>Xuất kho tiện lợi</h4>
                <p>Tạo phiếu xuất kho đơn giản, kiểm soát hàng hóa xuất ra một cách minh bạch và rõ ràng.</p>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <h4>Quản lý nhà cung cấp</h4>
                <p>Lưu trữ thông tin đối tác, theo dõi lịch sử giao dịch và đánh giá hiệu suất nhà cung cấp.</p>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h4>Báo cáo & Thống kê</h4>
                <p>Dashboard trực quan với số liệu nhập xuất, tồn kho, xu hướng và phân tích dữ liệu kinh doanh.</p>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h4>Phân quyền bảo mật</h4>
                <p>Hệ thống quản lý người dùng với vai trò Admin, Nhân viên, Sales và phân quyền chi tiết.</p>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="stat-box text-center">
                    <i class="fas fa-users text-primary"></i>
                    <h3>1,000+</h3>
                    <p>Người dùng tin tưởng</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-box text-center">
                    <i class="fas fa-box text-info"></i>
                    <h3>50,000+</h3>
                    <p>Sản phẩm được quản lý</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-box text-center">
                    <i class="fas fa-file-alt text-success"></i>
                    <h3>100,000+</h3>
                    <p>Giao dịch thành công</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-box text-center">
                    <i class="fas fa-headset text-warning"></i>
                    <h3>24/7</h3>
                    <p>Hỗ trợ khách hàng</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="cta-section">
    <div class="container text-center">
        <h2>Sẵn sàng chuyển đổi số?</h2>
        <p>Tham gia cùng hàng ngàn doanh nghiệp đang sử dụng DTHLogistics để tối ưu vận hành kho</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-hero btn-hero-light">
                <i class="fas fa-rocket mr-2"></i>Đăng ký ngay
            </a>
        }
        else
        {
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-hero btn-hero-light">
                <i class="fas fa-tachometer-alt mr-2"></i>Vào Dashboard
            </a>
        }
    </div>
</div>
