@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-3">
                    <i class="fas fa-warehouse mr-3"></i>DTHLogistics
                </h1>
                <p class="lead mb-4">Hệ thống quản lý kho hàng thông minh, giúp doanh nghiệp tối ưu hóa quy trình nhập xuất và kiểm soát tồn kho hiệu quả.</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-tachometer-alt mr-2"></i>Vào hệ thống
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg mr-2">
                        <i class="fas fa-sign-in-alt mr-2"></i>Đăng nhập
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-user-plus mr-2"></i>Đăng ký
                    </a>
                }
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-boxes" style="font-size: 15rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">Tính năng nổi bật</h2>
        <p class="text-muted">Giải pháp toàn diện cho quản lý kho hàng</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-box-open fa-4x text-info"></i>
                    </div>
                    <h4 class="card-title">Quản lý sản phẩm</h4>
                    <p class="card-text text-muted">Theo dõi chi tiết thông tin, số lượng tồn kho và vị trí lưu trữ của từng sản phẩm.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-arrow-down fa-4x text-success"></i>
                    </div>
                    <h4 class="card-title">Nhập kho nhanh</h4>
                    <p class="card-text text-muted">Ghi nhận phiếu nhập hàng từ nhà cung cấp, cập nhật tồn kho tự động và chính xác.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-arrow-up fa-4x text-warning"></i>
                    </div>
                    <h4 class="card-title">Xuất kho tiện lợi</h4>
                    <p class="card-text text-muted">Tạo phiếu xuất kho đơn giản, kiểm soát hàng hóa xuất ra một cách rõ ràng.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-truck fa-4x text-danger"></i>
                    </div>
                    <h4 class="card-title">Quản lý NCC</h4>
                    <p class="card-text text-muted">Lưu trữ thông tin nhà cung cấp, lịch sử giao dịch và đánh giá chất lượng.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-chart-line fa-4x text-primary"></i>
                    </div>
                    <h4 class="card-title">Báo cáo thống kê</h4>
                    <p class="card-text text-muted">Dashboard trực quan với số liệu nhập xuất, tồn kho và xu hướng kinh doanh.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-user-shield fa-4x text-secondary"></i>
                    </div>
                    <h4 class="card-title">Phân quyền linh hoạt</h4>
                    <p class="card-text text-muted">Quản lý người dùng với hệ thống vai trò Admin, Nhân viên và Sales.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="p-3">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="fw-bold">1000+</h3>
                    <p class="text-muted">Người dùng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-3">
                    <i class="fas fa-box fa-3x text-info mb-3"></i>
                    <h3 class="fw-bold">50,000+</h3>
                    <p class="text-muted">Sản phẩm quản lý</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-3">
                    <i class="fas fa-file-alt fa-3x text-success mb-3"></i>
                    <h3 class="fw-bold">100,000+</h3>
                    <p class="text-muted">Giao dịch</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-3">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h3 class="fw-bold">24/7</h3>
                    <p class="text-muted">Hỗ trợ</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container text-center mb-5 py-5">
    <h2 class="display-5 fw-bold mb-4">Sẵn sàng bắt đầu?</h2>
    <p class="lead text-muted mb-4">Tham gia cùng hàng ngàn doanh nghiệp đang sử dụng DTHLogistics</p>
    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
            <i class="fas fa-rocket mr-2"></i>Đăng ký ngay - Miễn phí
        </a>
    }
    else
    {
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fas fa-tachometer-alt mr-2"></i>Vào Dashboard
        </a>
    }
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
</style>
