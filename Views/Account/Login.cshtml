@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    .login-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #7e8ba3 100%);
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        padding: 50px 0;
    }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><rect width="2" height="2" fill="white" opacity="0.1"/></svg>') repeat;
            opacity: 0.3;
        }

    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .login-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 50px 40px;
        text-align: center;
        position: relative;
    }

        .login-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">ircle cx="50" cy="50" r="2" fill="white" opacity="0.1"/></svg>') repeat;
        }

        .login-header i {
            font-size: 4rem;
            color: white;
            margin-bottom: 20px;
            display: block;
            animation: float 3s ease-in-out infinite;
            position: relative;
            z-index: 1;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .login-header h2 {
        color: white;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 10px;
        position: relative;
        z-index: 1;
    }

    .login-header p {
        color: rgba(255,255,255,0.9);
        font-size: 1.1rem;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .login-body {
        padding: 40px;
    }

    .form-group label {
        color: #1e3c72;
        font-weight: 600;
        font-size: 1.05rem;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .form-group label i {
            width: 25px;
        }

    .form-control-custom {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 15px 20px;
        font-size: 1.05rem;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

    .password-wrapper {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #667eea;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

        .password-toggle:hover {
            color: #764ba2;
        }

    .form-check-custom {
        padding-left: 30px;
        margin-top: 20px;
    }

        .form-check-custom input {
            width: 20px;
            height: 20px;
            margin-top: 3px;
            cursor: pointer;
        }

        .form-check-custom label {
            color: #5a6c7d;
            font-size: 1rem;
            font-weight: 500;
            margin-left: 10px;
            cursor: pointer;
        }

    .btn-login {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 15px;
        font-size: 1.2rem;
        font-weight: 700;
        border-radius: 10px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }

    .form-text-info {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-top: 8px;
        display: flex;
        align-items: center;
    }

        .form-text-info i {
            margin-right: 5px;
            color: #667eea;
        }

    .register-link {
        text-align: center;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #f0f0f0;
    }

        .register-link a {
            color: #667eea;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .register-link a:hover {
                color: #764ba2;
                text-decoration: underline;
            }

    .floating-shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(255,255,255,0.1);
        animation: floatShape 6s ease-in-out infinite;
    }

    .shape-1 {
        width: 100px;
        height: 100px;
        top: 10%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 150px;
        height: 150px;
        bottom: 10%;
        right: 10%;
        animation-delay: 2s;
    }

    .shape-3 {
        width: 80px;
        height: 80px;
        top: 50%;
        right: 5%;
        animation-delay: 4s;
    }

    @@keyframes floatShape {
        0%, 100% {
            transform: translateY(0px) scale(1);
        }

        50% {
            transform: translateY(-20px) scale(1.1);
        }
    }
</style>

<div class="login-container">
    <!-- Floating Shapes -->
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-7">
                <div class="login-card">
                    <div class="login-header">
                        <i class="fas fa-warehouse"></i>
                        <h2>Đăng Nhập</h2>
                        <p>Hệ thống quản lý kho hàng</p>
                    </div>

                    <div class="login-body">
                        <form method="post" asp-controller="Account" asp-action="Login">
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="emailInput">
                                    <i class="fas fa-envelope"></i>Email
                                </label>
                                <input type="email"
                                       asp-for="Email"
                                       class="form-control form-control-custom"
                                       id="emailInput"
                                       placeholder="your.email@company.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <small class="form-text-info">
                                    <i class="fas fa-shield-alt"></i> Thông tin được mã hóa và bảo mật
                                </small>
                            </div>

                            <div class="form-group">
                                <label for="passwordInput">
                                    <i class="fas fa-lock"></i>Mật khẩu
                                </label>
                                <div class="password-wrapper">
                                    <input type="password"
                                           asp-for="Password"
                                           class="form-control form-control-custom"
                                           id="passwordInput"
                                           placeholder="••••••••">
                                    <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-check form-check-custom">
                                <input type="checkbox"
                                       asp-for="RememberMe"
                                       class="form-check-input"
                                       id="rememberCheck">
                                <label class="form-check-label" for="rememberCheck">
                                    <i class="fas fa-check-circle" style="color: #667eea;"></i> Ghi nhớ đăng nhập
                                </label>
                            </div>

                            <button type="submit" class="btn btn-login btn-block mt-4">
                                <i class="fas fa-sign-in-alt mr-2"></i>Đăng Nhập
                            </button>

                            <div class="register-link">
                                <small style="color: #7f8c8d;">
                                    Chưa có tài khoản?
                                    <a asp-controller="Account" asp-action="Register">
                                        Đăng ký ngay <i class="fas fa-arrow-right ml-1"></i>
                                    </a>
                                </small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');

        if (togglePassword && passwordInput) {
            togglePassword.addEventListener('click', function () {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                this.classList.toggle('fa-eye');
                this.classList.toggle('fa-eye-slash');
            });
        }
    </script>
}
