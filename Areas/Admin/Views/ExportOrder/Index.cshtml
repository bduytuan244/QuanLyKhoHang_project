@model IEnumerable<QuanLyKhoHang.Models.ExportOrder>

@{
    ViewData["Title"] = "Quản lý Soạn hàng";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách Yêu cầu Soạn hàng</h1>
            </div>
            <div class="col-sm-6">
                <a asp-action="Create" class="btn btn-success float-sm-right">
                    <i class="fas fa-plus"></i> Tạo Yêu Cầu Mới
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày tạo</th>
                            <th>Người tạo</th>
                            <th>Số lượng món</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.OrderCode</strong></td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.CreatedBy</td>
                                <td>@item.Details?.Count() món</td>
                                <td>
                                    @if (item.Status == "New")
                                    {
                                        <span class="badge badge-primary">Mới tạo</span>
                                    }
                                    else if (item.Status == "Done")
                                    {
                                        <span class="badge badge-success">Đã xong</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>