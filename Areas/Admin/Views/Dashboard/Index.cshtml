@model IEnumerable<WarehouseTransactionModel>
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

        .dashboard-header h1 {
            color: white;
            font-weight: 700;
            font-size: 2.5rem;
            margin: 0;
        }

        .dashboard-header p {
            margin: 10px 0 0 0;
            opacity: 0.95;
            font-size: 1.1rem;
        }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        margin-bottom: 20px;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            transition: width 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

            .stat-card:hover::before {
                width: 100%;
                opacity: 0.1;
            }

        .stat-card.info::before {
            background: #17a2b8;
        }

        .stat-card.success::before {
            background: #28a745;
        }

        .stat-card.warning::before {
            background: #ffc107;
        }

        .stat-card.danger::before {
            background: #dc3545;
        }

    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        margin-bottom: 15px;
    }

    .stat-card.info .stat-icon {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
    }

    .stat-card.success .stat-icon {
        background: linear-gradient(135deg, #28a745 0%, #218838 100%);
    }

    .stat-card.warning .stat-icon {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    }

    .stat-card.danger .stat-icon {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e3c72;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #7f8c8d;
        font-size: 1.05rem;
        font-weight: 500;
    }

    .stat-link {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 2px solid #f0f0f0;
        color: #667eea;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: all 0.3s ease;
    }

        .stat-link:hover {
            color: #764ba2;
            padding-left: 5px;
        }

    .activity-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .activity-header {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #667eea;
    }

        .activity-header h3 {
            color: #1e3c72;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .quick-action-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
        margin-bottom: 20px;
    }

    .action-btn {
        border-radius: 12px;
        padding: 20px;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        color: white;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

        .action-btn i {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            color: white;
        }

        .action-btn.primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .action-btn.success {
            background: linear-gradient(135deg, #28a745 0%, #218838 100%);
        }

        .action-btn.warning {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
        }

        .action-btn.danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

    .system-info-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        color: white;
    }

        .system-info-card h3 {
            color: white;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .system-info-card ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .system-info-card ul li {
                padding: 12px 0;
                border-bottom: 1px solid rgba(255,255,255,0.2);
                font-size: 1.05rem;
            }

                .system-info-card ul li:last-child {
                    border-bottom: none;
                }

                .system-info-card ul li i {
                    width: 25px;
                    margin-right: 10px;
                    opacity: 0.9;
                }
</style>

<!-- Dashboard Header -->
<div class="dashboard-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="fas fa-tachometer-alt mr-3"></i>Dashboard</h1>
            <p>Chào mừng trở lại, <strong>@User.Identity.Name</strong> - DTHLogistics Management System</p>
        </div>
        <div>
            <i class="fas fa-calendar-alt mr-2"></i>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Stat Cards -->
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card info">
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-number">@ViewBag.TotalProducts</div>
                    <div class="stat-label">Tổng sản phẩm</div>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="stat-link">
                        Xem chi tiết <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                    <div class="stat-number">@ViewBag.TotalImports</div>
                    <div class="stat-label">Phiếu nhập kho</div>
                    <a asp-area="Admin" asp-controller="Warehouse" asp-action="ImportIndex" class="stat-link">
                        Xem chi tiết <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card warning">
                    <div class="stat-icon">
                        <i class="fas fa-arrow-up"></i>
                    </div>
                    <div class="stat-number">@ViewBag.TotalExports</div>
                    <div class="stat-label">Phiếu xuất kho</div>
                    <a asp-area="Admin" asp-controller="Warehouse" asp-action="ExportIndex" class="stat-link">
                        Xem chi tiết <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card danger">
                    <div class="stat-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div class="stat-number">@ViewBag.TotalSuppliers</div>
                    <div class="stat-label">Nhà cung cấp</div>
                    <a asp-area="Admin" asp-controller="Supplier" asp-action="Index" class="stat-link">
                        Xem chi tiết <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content Row -->
        <div class="row mt-4">
            <!-- Activity Log -->
            <div class="col-lg-7">
                <div class="activity-card">
                    <div class="activity-header">
                        <h3><i class="fas fa-history mr-2"></i>Hoạt động gần đây</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead style="background-color: #f8f9fa;">
                                    <tr>
                                        <th style="color: #1e3c72; font-weight: 700;">Mã</th>
                                        <th style="color: #1e3c72; font-weight: 700;">Loại</th>
                                        <th style="color: #1e3c72; font-weight: 700;">Sản phẩm</th>
                                        <th style="color: #1e3c72; font-weight: 700;">Số lượng</th>
                                        <th style="color: #1e3c72; font-weight: 700;">Thời gian</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="color: #2c3e50; font-weight: 600; padding: 15px;">
                                                    <span class="badge badge-secondary" style="color: #000 ;font-size: 0.95rem;">#@item.Id</span>
                                                </td>
                                                <td>
                                                    @if (item.TransactionType == "Import")
                                                    {
                                                        <span class="badge badge-warning" style="color: #000; font-size: 0.95rem; padding: 6px 12px;">
                                                            <i class="fas fa-arrow-down mr-1"></i>Nhập
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning" style="color: #000; font-size: 0.95rem; padding: 6px 12px;">
                                                            <i class="fas fa-arrow-up mr-1"></i>Xuất
                                                        </span>
                                                    }
                                                </td>
                                                <td style="color: #2c3e50; font-weight: 600;">@item.Product?.ProductName</td>
                                                <td style="color: #1e3c72; font-weight: 700; font-size: 1.1rem;">@item.Quantity</td>
                                                <td style="color: #7f8c8d;">
                                                    <small>@item.TransactionDate.ToString("dd/MM/yyyy")</small><br>
                                                    <small>@item.TransactionDate.ToString("HH:mm")</small>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center" style="padding: 50px;">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <p class="text-muted mb-0">Chưa có hoạt động nào</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions & System Info -->
            <div class="col-lg-5">
                <!-- Quick Actions -->
                <div class="quick-action-card">
                    <div class="activity-header">
                        <h3><i class="fas fa-bolt mr-2"></i>Thao tác nhanh</h3>
                    </div>
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="action-btn primary">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm sản phẩm</span>
                                </a>
                            </div>
                            <div class="col-6 mb-3">
                                <a asp-area="Admin" asp-controller="Warehouse" asp-action="Import" class="action-btn success">
                                    <i class="fas fa-arrow-down"></i>
                                    <span>Nhập kho</span>
                                </a>
                            </div>
                            <div class="col-6">
                                <a asp-area="Admin" asp-controller="Warehouse" asp-action="Export" class="action-btn warning">
                                    <i class="fas fa-arrow-up"></i>
                                    <span>Xuất kho</span>
                                </a>
                            </div>
                            <div class="col-6">
                                <a asp-area="Admin" asp-controller="Supplier" asp-action="Create" class="action-btn danger">
                                    <i class="fas fa-truck"></i>
                                    <span>Thêm NCC</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Info -->
                <div class="system-info-card mt-3">
                    <h3><i class="fas fa-info-circle mr-2"></i>Thông tin hệ thống</h3>
                    <ul>
                        <li><i class="fas fa-check-circle"></i>Hệ thống hoạt động bình thường</li>
                        <li><i class="fas fa-clock"></i>@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</li>
                        <li><i class="fas fa-user"></i>Người dùng: @User.Identity.Name</li>
                        <li><i class="fas fa-shield-alt"></i>Phiên bản: v1.0.0</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
