@model WarehouseTransactionModel
@{
    ViewData["Title"] = "Xuất kho";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Phiếu xuất kho</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Xuất kho</li>
                </ol>
            </div>
        </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-arrow-up mr-2"></i>Thông tin xuất kho</h3>
                        <div class="card-tools">
                            <a class="btn btn-light btn-sm" asp-controller="Warehouse" asp-action="ExportIndex">
                                <i class="fas fa-list"></i> Danh sách
                            </a>
                        </div>
                    </div>
                    <form asp-area="Admin" asp-action="Export" asp-controller="Warehouse" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                            <div class="form-group">
                                <label class="form-label">Sản phẩm <span class="text-danger">*</span></label>
                                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                                    <option value="">-- Chọn sản phẩm --</option>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Số lượng xuất <span class="text-danger">*</span></label>
                                <input asp-for="Quantity" type="number" class="form-control" placeholder="Nhập số lượng xuất" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Ghi chú</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-check"></i> Xuất kho
                            </button>
                            <a asp-controller="Warehouse" asp-action="ExportIndex" class="btn btn-default">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Hướng dẫn</h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li><i class="fas fa-check text-success"></i> Chọn sản phẩm cần xuất</li>
                            <li><i class="fas fa-check text-success"></i> Nhập số lượng xuất</li>
                            <li><i class="fas fa-check text-success"></i> Kiểm tra số lượng tồn kho</li>
                            <li><i class="fas fa-check text-success"></i> Xác nhận xuất kho</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
