@model WarehouseTransactionModel
@{
    ViewData["Title"] = "Xuất kho";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 style="color: #2c3e50; font-weight: 700;">Xuất kho</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" style="color: #007bff;">Home</a></li>
                    <li class="breadcrumb-item active" style="color: #6c757d;">Xuất kho</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-warning">
                        <h3 class="card-title" style="color: #000; font-weight: 600;">
                            <i class="fas fa-arrow-up mr-2"></i>Phiếu xuất kho
                        </h3>
                        <div class="card-tools">
                            <a class="btn btn-dark btn-sm" asp-controller="Warehouse" asp-action="ExportIndex">
                                <i class="fas fa-list mr-1"></i> Danh sách
                            </a>
                        </div>
                    </div>
                    <form asp-area="Admin" asp-action="Export" asp-controller="Warehouse" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                            <div class="form-group">
                                <label class="form-label" style="color: #000; font-weight: 600;">Sản phẩm <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       id="productSearch"
                                       list="productList"
                                       placeholder="Gõ để tìm kiếm sản phẩm..."
                                       autocomplete="off" />
                                <datalist id="productList">
                                    @foreach (var item in ViewBag.Products)
                                    {
                                        <option value="@item.Text" data-value="@item.Value">@item.Text</option>
                                    }
                                </datalist>
                                <input type="hidden" asp-for="ProductId" id="productIdHidden" />
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" style="color: #000; font-weight: 600;">Số lượng xuất <span class="text-danger">*</span></label>
                                <input asp-for="Quantity" type="number" class="form-control" placeholder="Nhập số lượng xuất" min="1" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" style="color: #000; font-weight: 600;">Ghi chú <span class="text-danger">*</span></label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <button type="submit" class="btn btn-warning btn-lg" style="color: #000; font-weight: 600;">
                                <i class="fas fa-check mr-2"></i> Xuất kho
                            </button>
                            <a asp-controller="Warehouse" asp-action="ExportIndex" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times mr-2"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-danger">
                        <h3 class="card-title text-white" style="font-weight: 600;">
                            <i class="fas fa-exclamation-triangle mr-2"></i>Cảnh báo
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled" style="color: #000; font-weight: 500;">
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Gõ vào ô để tìm kiếm nhanh</li>
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Chọn từ danh sách gợi ý</li>
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Kiểm tra số lượng tồn kho</li>
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Không được xuất quá số tồn</li>
                        </ul>
                        <div class="alert alert-danger" style="margin-top: 15px;">
                            <i class="fas fa-ban mr-2"></i>
                            <strong>Lưu ý:</strong> Số lượng xuất sẽ tự động trừ khỏi tồn kho!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#productSearch').on('input', function() {
                var selectedProduct = $(this).val();
                var option = $('#productList option').filter(function() {
                    return this.value === selectedProduct;
                });

                if (option.length > 0) {
                    var productId = option.data('value');
                    $('#productIdHidden').val(productId);
                }
            });
        });
    </script>
}
