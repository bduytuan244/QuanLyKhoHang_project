@model WarehouseTransactionModel
@{
    ViewData["Title"] = "Xuất kho";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        padding: 25px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: #000;
        box-shadow: 0 8px 25px rgba(255, 193, 7, 0.3);
    }

        .page-header h1 {
            color: #000;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
        }

    .breadcrumb-custom {
        background: rgba(0,0,0,0.1);
        border-radius: 10px;
        padding: 10px 20px;
    }

        .breadcrumb-custom a {
            color: #000;
            text-decoration: none;
            font-weight: 600;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

        .breadcrumb-custom .active {
            color: rgba(0,0,0,0.7);
        }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #ff9800;
    }

        .form-header h3 {
            color: #000;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .btn-list {
        background: rgba(0,0,0,0.8);
        color: white;
        border: none;
        padding: 8px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-list:hover {
            background: #000;
            color: white;
            transform: translateY(-2px);
        }

    .form-label-custom {
        color: #1e3c72;
        font-weight: 600;
        font-size: 1.05rem;
        margin-bottom: 10px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 18px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
            outline: none;
        }

    .form-section {
        padding: 30px;
    }

    .form-footer {
        background: #f8f9fa;
        padding: 20px 30px;
        border-top: 2px solid #e0e0e0;
    }

    .btn-export {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        border: none;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: #000;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
    }

        .btn-export:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.4);
            background: linear-gradient(135deg, #ff9800 0%, #ffc107 100%);
            color: #000;
        }

    .btn-cancel {
        background: white;
        border: 2px solid #e0e0e0;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: #5a6c7d;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #ffc107;
            color: #ffc107;
            transform: translateY(-2px);
        }

    .info-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .info-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #c82333;
    }

        .info-header h3 {
            color: white;
            font-weight: 700;
            font-size: 1.3rem;
            margin: 0;
        }

    .info-body {
        padding: 25px;
    }

    .info-list {
        list-style: none;
        padding: 0;
        margin: 0 0 20px 0;
    }

        .info-list li {
            padding: 10px 0;
            color: #2c3e50;
            font-weight: 500;
            font-size: 1rem;
        }

            .info-list li i {
                width: 25px;
                color: #28a745;
            }

    .warning-box {
        background: linear-gradient(135deg, #fff3cd 0%, #fff8e1 100%);
        border-left: 4px solid #dc3545;
        padding: 15px 20px;
        border-radius: 10px;
    }

        .warning-box i {
            color: #dc3545;
            font-size: 1.2rem;
            margin-right: 10px;
        }

        .warning-box strong {
            color: #721c24;
        }

    .required-star {
        color: #e74c3c;
        font-weight: 700;
    }

    .form-hint {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-arrow-up mr-2"></i>Xuất Kho</h1>
        <nav class="breadcrumb-custom mb-0">
            <a asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home mr-1"></i>Home
            </a>
            <span class="mx-2">/</span>
            <span class="active">Xuất kho</span>
        </nav>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="form-card">
                    <div class="form-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3><i class="fas fa-file-export mr-2"></i>Phiếu xuất kho</h3>
                            <a class="btn btn-list" asp-controller="Warehouse" asp-action="ExportIndex">
                                <i class="fas fa-list mr-1"></i>Danh sách
                            </a>
                        </div>
                    </div>

                    <form asp-area="Admin" asp-action="Export" asp-controller="Warehouse" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-section">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>

                            <div class="form-group">
                                <label class="form-label-custom">
                                    <i class="fas fa-box mr-2" style="color: #ffc107;"></i>Sản phẩm
                                    <span class="required-star">*</span>
                                </label>
                                <input type="text"
                                       class="form-control form-control-custom"
                                       id="productSearch"
                                       list="productList"
                                       placeholder="🔍 Gõ để tìm kiếm sản phẩm..."
                                       autocomplete="off" />
                                <datalist id="productList">
                                    @foreach (var item in ViewBag.Products)
                                    {
                                        <option value="@item.Text" data-value="@item.Value">@item.Text</option>
                                    }
                                </datalist>
                                <input type="hidden" asp-for="ProductId" id="productIdHidden" />
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                                <small class="form-hint">
                                    <i class="fas fa-lightbulb"></i> Gõ tên hoặc mã sản phẩm để tìm kiếm nhanh
                                </small>
                            </div>

                            <div class="form-group">
                                <label class="form-label-custom">
                                    <i class="fas fa-cubes mr-2" style="color: #ffc107;"></i>Số lượng xuất
                                    <span class="required-star">*</span>
                                </label>
                                <input asp-for="Quantity"
                                       type="number"
                                       class="form-control form-control-custom"
                                       placeholder="Nhập số lượng xuất"
                                       min="1" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                <small class="form-hint">
                                    <i class="fas fa-exclamation-circle"></i> Kiểm tra số lượng tồn kho trước khi xuất
                                </small>
                            </div>

                            <div class="form-group">
                                <label class="form-label-custom">
                                    <i class="fas fa-sticky-note mr-2" style="color: #ffc107;"></i>Ghi chú
                                    <span class="required-star">*</span>
                                </label>
                                <textarea asp-for="Notes"
                                          class="form-control form-control-custom"
                                          rows="4"
                                          placeholder="Nhập lý do xuất kho, đơn vị nhận hàng, thông tin vận chuyển..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-export">
                                <i class="fas fa-check-circle mr-2"></i>Xác Nhận Xuất Kho
                            </button>
                            <a asp-controller="Warehouse" asp-action="ExportIndex" class="btn btn-cancel ml-2">
                                <i class="fas fa-times mr-2"></i>Hủy Bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="info-card">
                    <div class="info-header">
                        <h3><i class="fas fa-shield-alt mr-2"></i>Hướng dẫn & Cảnh báo</h3>
                    </div>
                    <div class="info-body">
                        <ul class="info-list">
                            <li><i class="fas fa-check-circle"></i> Gõ để tìm kiếm sản phẩm nhanh</li>
                            <li><i class="fas fa-check-circle"></i> Chọn từ danh sách gợi ý</li>
                            <li><i class="fas fa-check-circle"></i> Kiểm tra số lượng tồn kho</li>
                            <li><i class="fas fa-check-circle"></i> Không được xuất quá số tồn</li>
                            <li><i class="fas fa-check-circle"></i> Ghi rõ lý do và đơn vị nhận</li>
                        </ul>

                        <div class="warning-box">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Cảnh báo quan trọng:</strong>
                            <p style="margin: 10px 0 0 0; color: #721c24;">
                                Số lượng xuất sẽ <strong>tự động trừ</strong> khỏi tồn kho.
                                Vui lòng kiểm tra kỹ trước khi xác nhận!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#productSearch').on('input', function () {
                var selectedProduct = $(this).val();
                var option = $('#productList option').filter(function () {
                    return this.value === selectedProduct;
                });

                if (option.length > 0) {
                    var productId = option.data('value');
                    $('#productIdHidden').val(productId);
                }
            });
        });
    </script>
}
