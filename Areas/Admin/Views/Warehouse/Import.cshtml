@model WarehouseTransactionModel
@{
    ViewData["Title"] = "Nhập kho";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 style="color: #2c3e50; font-weight: 700;">Nhập kho</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" style="color: #007bff;">Home</a></li>
                    <li class="breadcrumb-item active" style="color: #6c757d;">Nhập kho</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-success">
                        <h3 class="card-title text-white" style="font-weight: 600;">
                            <i class="fas fa-arrow-down mr-2"></i>Phiếu nhập kho
                        </h3>
                        <div class="card-tools">
                            <a class="btn btn-light btn-sm" asp-controller="Warehouse" asp-action="ImportIndex">
                                <i class="fas fa-list mr-1"></i> Danh sách
                            </a>
                        </div>
                    </div>
                    <form asp-area="Admin" asp-action="Import" asp-controller="Warehouse" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" style="color: #000; font-weight: 600;">Sản phẩm <span class="text-danger">*</span></label>
                                        <input type="text"
                                               class="form-control"
                                               id="productSearch"
                                               list="productList"
                                               placeholder="Gõ để tìm kiếm sản phẩm..."
                                               autocomplete="off" />
                                        <datalist id="productList">
                                            @foreach (var item in ViewBag.Products)
                                            {
                                                <option value="@item.Text" data-value="@item.Value">@item.Text</option>
                                            }
                                        </datalist>
                                        <input type="hidden" asp-for="ProductId" id="productIdHidden" />
                                        <span asp-validation-for="ProductId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" style="color: #000; font-weight: 600;">Nhà cung cấp <span class="text-danger">*</span></label>
                                        <input type="text"
                                               class="form-control"
                                               id="supplierSearch"
                                               list="supplierList"
                                               placeholder="Gõ để tìm kiếm nhà cung cấp..."
                                               autocomplete="off" />
                                        <datalist id="supplierList">
                                            @foreach (var item in ViewBag.Suppliers)
                                            {
                                                <option value="@item.Text" data-value="@item.Value">@item.Text</option>
                                            }
                                        </datalist>
                                        <input type="hidden" asp-for="SupplierId" id="supplierIdHidden" />
                                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" style="color: #000; font-weight: 600;">Số lượng nhập <span class="text-danger">*</span></label>
                                <input asp-for="Quantity" type="number" class="form-control" placeholder="Nhập số lượng" min="1" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" style="color: #000; font-weight: 600;">Ghi chú <span class="text-danger">*</span></label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check mr-2"></i> Nhập kho
                            </button>
                            <a asp-controller="Warehouse" asp-action="ImportIndex" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times mr-2"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-info">
                        <h3 class="card-title text-white" style="font-weight: 600;">
                            <i class="fas fa-info-circle mr-2"></i>Hướng dẫn
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled" style="color: #000; font-weight: 500;">
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Gõ vào ô để tìm kiếm nhanh</li>
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Chọn từ danh sách gợi ý</li>
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Nhập số lượng chính xác</li>
                            <li class="mb-2"><i class="fas fa-check text-success mr-2"></i> Kiểm tra lại thông tin trước khi lưu</li>
                        </ul>
                        <div class="alert alert-warning" style="margin-top: 15px;">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            <strong>Lưu ý:</strong> Số lượng sẽ tự động cộng vào tồn kho!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Xử lý khi chọn sản phẩm
            $('#productSearch').on('input', function() {
                var selectedProduct = $(this).val();
                var option = $('#productList option').filter(function() {
                    return this.value === selectedProduct;
                });

                if (option.length > 0) {
                    var productId = option.data('value');
                    $('#productIdHidden').val(productId);
                }
            });

            // Xử lý khi chọn nhà cung cấp
            $('#supplierSearch').on('input', function() {
                var selectedSupplier = $(this).val();
                var option = $('#supplierList option').filter(function() {
                    return this.value === selectedSupplier;
                });

                if (option.length > 0) {
                    var supplierId = option.data('value');
                    $('#supplierIdHidden').val(supplierId);
                }
            });
        });
    </script>
}
