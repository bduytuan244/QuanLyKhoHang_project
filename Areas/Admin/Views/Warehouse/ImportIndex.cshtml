@model IEnumerable<WarehouseTransactionModel>
@{
    ViewData["Title"] = "Danh sách nhập kho";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        padding: 25px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
    }

        .page-header h1 {
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
        }

    .breadcrumb-custom {
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        padding: 10px 20px;
    }

        .breadcrumb-custom a {
            color: white;
            text-decoration: none;
            font-weight: 600;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

        .breadcrumb-custom .active {
            color: rgba(255,255,255,0.9);
        }

    .table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .table-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #20c997;
    }

        .table-header h3 {
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .btn-excel {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        color: #000;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.3);
        margin-right: 10px;
    }

        .btn-excel:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 193, 7, 0.4);
            color: #000;
        }

    .btn-add-import {
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(32, 201, 151, 0.3);
    }

        .btn-add-import:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(32, 201, 151, 0.4);
            color: white;
        }

    .table-custom {
        margin: 0;
    }

        .table-custom thead {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        }

            .table-custom thead th {
                color: white;
                font-weight: 600;
                font-size: 0.95rem;
                padding: 15px 12px;
                border: none;
                vertical-align: middle;
            }

        .table-custom tbody tr {
            transition: all 0.3s ease;
        }

            .table-custom tbody tr:hover {
                background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
                transform: scale(1.01);
            }

        .table-custom tbody td {
            padding: 15px 12px;
            vertical-align: middle;
            color: #2c3e50;
            font-size: 0.95rem;
        }

    .badge-custom {
        padding: 6px 12px;
        font-size: 0.9rem;
        font-weight: 600;
        border-radius: 6px;
    }

    .badge-qty {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .badge-user {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .badge-type {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        color: white;
    }

    .product-name {
        color: #1e3c72;
        font-weight: 600;
    }

    .supplier-name {
        color: #5a6c7d;
        font-weight: 500;
    }

    .empty-state {
        padding: 60px 20px;
        text-align: center;
    }

        .empty-state i {
            color: #bdc3c7;
            margin-bottom: 20px;
        }

        .empty-state p {
            color: #7f8c8d;
            font-size: 1.1rem;
            margin: 0;
        }

    .search-container {
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        margin-bottom: 25px;
    }

    .search-input-group {
        border: 1px solid #e0e0e0;
        border-radius: 50px;
        padding: 5px;
        transition: all 0.3s;
        background: #f8f9fa;
    }

        .search-input-group:focus-within {
            border-color: #28a745; /* Viền xanh khi focus */
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            background: white;
        }

    .search-input {
        border: none;
        background: transparent;
        padding-left: 15px;
        font-size: 1rem;
        height: 40px;
    }

        .search-input:focus {
            background: transparent;
            box-shadow: none;
        }

    .btn-search-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%); /* Nút tìm màu xanh */
        color: white;
        border-radius: 50px;
        padding: 8px 25px;
        border: none;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-search-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .btn-reset-custom {
        color: #dc3545;
        background: white;
        border: 1px solid #dc3545;
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 600;
        transition: all 0.3s;
        margin-left: 10px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

        .btn-reset-custom:hover {
            background: #dc3545;
            color: white;
        }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-arrow-down mr-2"></i>Danh Sách Nhập Kho</h1>
        <nav class="breadcrumb-custom mb-0">
            <a asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home mr-1"></i>Home
            </a>
            <span class="mx-2">/</span>
            <span class="active">Nhập kho</span>
        </nav>
    </div>
</div>
<div class="search-container">
    <form asp-action="ImportIndex" method="get">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="input-group search-input-group">
                    <input type="text" name="searchString" class="form-control search-input"
                           placeholder="Tìm tên SP, NCC, Người làm..."
                           value="@ViewData["CurrentFilter"]">
                    <div class="input-group-append">
                        <button class="btn btn-search-custom" type="submit">
                            <i class="fas fa-search mr-1"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <div class="col-md-4">
                    <a asp-action="ImportIndex" class="btn btn-reset-custom">
                        <i class="fas fa-times mr-1"></i> Xóa bộ lọc
                    </a>
                </div>
            }
        </div>
    </form>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="table-card">
            <div class="table-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3><i class="fas fa-history mr-2"></i>Lịch sử nhập kho</h3>
                    <div>
                        <a asp-action="ExportToExcel_I" asp-controller="Warehouse" class="btn btn-excel">
                            <i class="fas fa-file-excel mr-2"></i>Xuất Excel
                        </a>
                        <a class="btn btn-add-import" asp-controller="Warehouse" asp-action="Import">
                            <i class="fas fa-plus mr-2"></i>Nhập kho mới
                        </a>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th style="width: 60px;">STT</th>
                            <th>Tên sản phẩm</th>
                            <th style="width: 150px;">Nhà cung cấp</th>
                            <th style="width: 150px;">Người thực hiện</th>
                            <th style="width: 120px;">Số lượng</th>
                            <th style="width: 150px;">Ngày nhập</th>
                            <th>Ghi chú</th>
                            <th style="width: 120px;">Loại GD</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int stt = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@stt</strong></td>
                                    <td class="product-name">
                                        <i class="fas fa-box mr-2" style="color: #28a745;"></i>@item.Product?.ProductName
                                    </td>
                                    <td class="supplier-name">
                                        <i class="fas fa-truck mr-2" style="color: #17a2b8;"></i>@item.Supplier?.Name
                                    </td>
                                    <td>
                                        <span class="badge badge-custom badge-user">
                                            <i class="fas fa-user mr-1"></i>@item.Username
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge badge-custom badge-qty">
                                            <i class="fas fa-arrow-down mr-1"></i>@item.Quantity
                                        </span>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="far fa-calendar-alt mr-1"></i>@item.TransactionDate.ToString("dd/MM/yyyy")
                                            <br>
                                            <i class="far fa-clock mr-1"></i>@item.TransactionDate.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Notes))
                                        {
                                            <small>@(item.Notes.Length > 50 ? item.Notes.Substring(0, 50) + "..." : item.Notes)</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">---</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge badge-custom badge-type">
                                            <i class="fas fa-exchange-alt mr-1"></i>@item.TransactionType
                                        </span>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    <div class="empty-state">
                                        <i class="fas fa-box-open fa-4x"></i>
                                        <p>Chưa có dữ liệu nhập kho</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
