@model IEnumerable<WarehouseTransactionModel>
@{
    ViewData["Title"] = "Danh sách nhập kho";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách nhập kho</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Nhập kho</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-arrow-down mr-2"></i>Lịch sử nhập kho</h3>
                <div class="card-tools">
                    <a asp-action="ExportToExcel_I" asp-controller="Warehouse" class="btn btn-warning btn-sm">
                        <i class="fas fa-file-excel"></i> Xuất Excel
                    </a>
                    <a class="btn btn-success btn-sm" asp-controller="Warehouse" asp-action="Import">
                        <i class="fas fa-plus"></i> Nhập kho mới
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>Tên sản phẩm</th>
                            <th>Nhà cung cấp</th>
                            <th>Người thực hiện</th>
                            <th style="width: 120px;">Số lượng nhập</th>
                            <th style="width: 150px;">Ngày nhập</th>
                            <th>Ghi chú</th>
                            <th style="width: 120px;">Tình trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int stt = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td><strong>@item.Product?.ProductName</strong></td>
                                    <td>@item.Supplier?.Name</td>
                                    <td>
                                        <span class="badge badge-secondary">@item.Username</span>
                                    </td>
                                    <td><span class="badge badge-success" style="color: #000;">@item.Quantity</span></td>
                                    <td><small>@item.TransactionDate.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    <td>@item.Notes</td>
                                    <td><span class="badge badge-info">@item.TransactionType</span></td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 mt-3"></i>
                                    <p>Chưa có dữ liệu nhập kho</p>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>
