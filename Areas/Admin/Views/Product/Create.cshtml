@model ProductModel
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-box mr-2"></i>Thông tin sản phẩm</h3>
                        <div class="card-tools">
                            <a class="btn btn-light btn-sm" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-list"></i> Danh sách
                            </a>
                        </div>
                    </div>
                    <form asp-controller="Product" asp-action="Create" method="POST">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductCode">Mã sản phẩm <span class="text-danger">*</span></label>
                                        <input type="text" asp-for="ProductCode" class="form-control" id="ProductCode" placeholder="Nhập mã sản phẩm">
                                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductName">Tên sản phẩm <span class="text-danger">*</span></label>
                                        <input type="text" asp-for="ProductName" class="form-control" id="ProductName" placeholder="Nhập tên sản phẩm">
                                        <span asp-validation-for="ProductName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductQuantity">Số lượng <span class="text-danger">*</span></label>
                                        <input type="text" asp-for="ProductQuantity" class="form-control" id="ProductQuantity" placeholder="0">
                                        <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductUnit">Đơn vị tính <span class="text-danger">*</span></label>
                                        <select class="form-control" asp-for="ProductUnit" id="ProductUnit">
                                            <option value="">-- Chọn đơn vị --</option>
                                            <option value="cái">Cái</option>
                                            <option value="thùng">Thùng</option>
                                            <option value="bịch">Bịch</option>
                                        </select>
                                        <span asp-validation-for="ProductUnit" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Location">Vị trí kho <span class="text-danger">*</span></label>
                                <input type="text" asp-for="Location" class="form-control" id="Location" placeholder="Nhập vị trí trong kho">
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="ProductDescription">Mô tả</label>
                                <textarea asp-for="ProductDescription" class="form-control" id="ProductDescription" rows="4" placeholder="Nhập mô tả chi tiết sản phẩm"></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-default">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
