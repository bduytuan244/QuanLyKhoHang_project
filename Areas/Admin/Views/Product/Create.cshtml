@model ProductModel
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 25px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

        .page-header h1 {
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
        }

    .breadcrumb-custom {
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        padding: 10px 20px;
    }

        .breadcrumb-custom a {
            color: white;
            text-decoration: none;
            font-weight: 500;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

        .breadcrumb-custom .active {
            color: rgba(255,255,255,0.9);
        }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #667eea;
    }

        .form-header h3 {
            color: #1e3c72;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .form-label-custom {
        color: #1e3c72;
        font-weight: 600;
        font-size: 1.05rem;
        margin-bottom: 10px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 18px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

        .form-control-custom::placeholder {
            color: #bdc3c7;
        }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            color: white;
        }

    .btn-cancel {
        background: white;
        border: 2px solid #e0e0e0;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: #5a6c7d;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #667eea;
            color: #667eea;
            transform: translateY(-2px);
        }

    .btn-list {
        background: white;
        color: #667eea;
        border: 2px solid white;
        padding: 8px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-list:hover {
            background: rgba(255,255,255,0.9);
            color: #764ba2;
        }

    .form-section {
        padding: 30px;
    }

    .form-footer {
        background: #f8f9fa;
        padding: 20px 30px;
        border-top: 2px solid #e0e0e0;
    }

    .required-star {
        color: #e74c3c;
        font-weight: 700;
    }

    .form-hint {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-top: 5px;
        display: block;
    }

    .input-group-custom {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        font-size: 1.1rem;
        z-index: 10;
    }

    .form-control-with-icon {
        padding-left: 45px;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-plus-circle mr-2"></i>Thêm Sản Phẩm Mới</h1>
        <nav class="breadcrumb-custom mb-0">
            <a asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home mr-1"></i>Home
            </a>
            <span class="mx-2">/</span>
            <a asp-controller="Product" asp-action="Index">Sản phẩm</a>
            <span class="mx-2">/</span>
            <span class="active">Thêm mới</span>
        </nav>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="form-card">
                    <div class="form-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3><i class="fas fa-box mr-2"></i>Thông tin sản phẩm</h3>
                            <a class="btn btn-list" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-list mr-1"></i>Danh sách
                            </a>
                        </div>
                    </div>

                    <form asp-controller="Product" asp-action="Create" method="POST">
                        @Html.AntiForgeryToken()
                        <div class="form-section">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductCode" class="form-label-custom">
                                            <i class="fas fa-barcode mr-2" style="color: #667eea;"></i>Mã sản phẩm
                                            <span class="required-star">*</span>
                                        </label>
                                        <input type="text"
                                               asp-for="ProductCode"
                                               class="form-control form-control-custom"
                                               id="ProductCode"
                                               placeholder="VD: SP001">
                                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                                        <small class="form-hint">Mã định danh duy nhất cho sản phẩm</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductName" class="form-label-custom">
                                            <i class="fas fa-tag mr-2" style="color: #667eea;"></i>Tên sản phẩm
                                            <span class="required-star">*</span>
                                        </label>
                                        <input type="text"
                                               asp-for="ProductName"
                                               class="form-control form-control-custom"
                                               id="ProductName"
                                               placeholder="VD: Thép hộp vuông 50x50">
                                        <span asp-validation-for="ProductName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductQuantity" class="form-label-custom">
                                            <i class="fas fa-cubes mr-2" style="color: #667eea;"></i>Số lượng
                                            <span class="required-star">*</span>
                                        </label>
                                        <input type="number"
                                               asp-for="ProductQuantity"
                                               class="form-control form-control-custom"
                                               id="ProductQuantity"
                                               placeholder="0"
                                               min="0">
                                        <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                                        <small class="form-hint">Số lượng ban đầu trong kho</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="ProductUnit" class="form-label-custom">
                                            <i class="fas fa-balance-scale mr-2" style="color: #667eea;"></i>Đơn vị tính
                                            <span class="required-star">*</span>
                                        </label>
                                        <select class="form-control form-control-custom" asp-for="ProductUnit" id="ProductUnit">
                                            <option value="">-- Chọn đơn vị tính --</option>
                                            <option value="Cái">Cái</option>
                                            <option value="Thùng">Thùng</option>
                                            <option value="Bịch">Bịch</option>
                                            <option value="Kg">Kg</option>
                                            <option value="Tấn">Tấn</option>
                                            <option value="Mét">Mét</option>
                                            <option value="Lít">Lít</option>
                                        </select>
                                        <span asp-validation-for="ProductUnit" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Location" class="form-label-custom">
                                    <i class="fas fa-map-marker-alt mr-2" style="color: #667eea;"></i>Vị trí kho
                                    <span class="required-star">*</span>
                                </label>
                                <input type="text"
                                       asp-for="Location"
                                       class="form-control form-control-custom"
                                       id="Location"
                                       placeholder="VD: Kệ A1, Kho B, Tầng 2">
                                <span asp-validation-for="Location" class="text-danger"></span>
                                <small class="form-hint">Vị trí lưu trữ trong kho</small>
                            </div>

                            <div class="form-group">
                                <label for="ProductDescription" class="form-label-custom">
                                    <i class="fas fa-align-left mr-2" style="color: #667eea;"></i>Mô tả chi tiết
                                </label>
                                <textarea asp-for="ProductDescription"
                                          class="form-control form-control-custom"
                                          id="ProductDescription"
                                          rows="4"
                                          placeholder="Nhập mô tả chi tiết về sản phẩm, thông số kỹ thuật..."></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-save">
                                <i class="fas fa-check mr-2"></i>Lưu Sản Phẩm
                            </button>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-cancel ml-2">
                                <i class="fas fa-times mr-2"></i>Hủy Bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
