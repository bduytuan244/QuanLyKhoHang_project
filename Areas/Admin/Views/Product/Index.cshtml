@model X.PagedList.IPagedList<ProductModel>
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-box mr-2"></i>Quản lý sản phẩm</h3>
                <div class="card-tools">
                    <a class="btn btn-success btn-sm" asp-controller="Product" asp-action="Create">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Mã SP</th>
                            <th>Tên sản phẩm</th>
                            <th style="width: 80px;">Đơn vị</th>
                            <th style="width: 100px;">Số lượng</th>
                            <th style="width: 120px;">Vị trí</th>
                            <th>Ghi chú</th>
                            <th style="width: 130px;">Ngày tạo</th>
                            <th style="width: 130px;">Cập nhật</th>
                            <th style="width: 120px;" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><span class="badge badge-info">@item.ProductCode</span></td>
                                    <td><strong>@item.ProductName</strong></td>
                                    <td>@item.ProductUnit</td>
                                    <td>
                                        @if (item.ProductQuantity > 10)
                                        {
                                            <span class="badge badge-success" style="color: #000;">@item.ProductQuantity</span>
                                        }
                                        else if (item.ProductQuantity > 0)
                                        {
                                            <span class="badge badge-warning" style="color: #000;">@item.ProductQuantity</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger" style="color: #000;">@item.ProductQuantity</span>
                                        }
                                    </td>
                                    <td>@item.Location</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ProductDescription))
                                        {
                                            @(item.ProductDescription.Length > 30 ? item.ProductDescription.Substring(0, 30) + "..." : item.ProductDescription)
                                        }
                                    </td>
                                    <td><small>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    <td><small>@item.UpdateDate.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    <td class="text-center">
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Product", new { id = item.Id })" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 mt-3"></i>
                                    <p>Chưa có sản phẩm nào</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model != null && Model.Any())
            {
                <div class="card-footer clearfix">
                    <div class="float-left">
                        <p class="text-muted">
                            Hiển thị @Model.FirstItemOnPage - @Model.LastItemOnPage của @Model.TotalItemCount sản phẩm
                        </p>
                    </div>
                    <div class="float-right">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new {page}), new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item" },
                                        PageClasses = new[] { "page-link" },
                                        UlElementClasses = new[] { "pagination pagination-sm m-0" },
                                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                                        DisplayLinkToLastPage = PagedListDisplayMode.Always
                                        })
                </div>
            </div>
                        }
        </div>
    </div>
</section>
