<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyKhoHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"/>
    <link rel="stylesheet" href="~/QuanLyKhoHang.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark main-navbar">
        <div class="container-fluid">
            <a class="navbar-brand brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-warehouse me-2"></i>QuanLyKhoHang
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span><i class="fas fa-bars text-white"></i></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 align-items-sm-center">
                    <li class="nav-item">
                        <a class="nav-link nav-link-main" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-main" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="fas fa-shield-alt me-1"></i>Privacy
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-tachometer-alt me-1"></i>CMS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                <i class="fab fa-product-hunt me-1"></i>Sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="Warehouse" asp-action="Import">
                                <i class="fas fa-boxes-stacked me-1"></i>Nhập kho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="Warehouse" asp-action="Export">
                                <i class="fas fa-dolly me-1"></i>Xuất kho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="Supplier" asp-action="Index">
                                <i class="fas fa-truck me-1"></i>Nhà cung cấp
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="User" asp-action="Index">
                                <i class="fas fa-user me-1"></i>Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="Role" asp-action="Index">
                                <i class="fas fa-user-tag me-1"></i>Roles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="Admin" asp-controller="UserRole" asp-action="Index">
                                <i class="fas fa-user-shield me-1"></i>Gán vai trò
                            </a>
                        </li>

                        <li class="nav-item ms-sm-3 mt-2 mt-sm-0">
                            <a class="nav-link user-pill" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-right-from-brush me-1"></i>Logout @User.Identity.Name
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-sm-auto">
                            <a class="nav-link nav-link-main" asp-area="" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i>Register
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-main" asp-area="" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-right-to-bracket me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            else if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success"> 
                    @TempData["SuccessMessage"]
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QuanLyKhoHang - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
