@model List<UserWithRolesViewModel>
@{
    ViewData["Title"] = "Quản lý quyền người dùng";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 style="color: #2c3e50; font-weight: 700;">Quản lý quyền người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" style="color: #3498db;">Home</a></li>
                    <li class="breadcrumb-item active" style="color: #7f8c8d;">Gán vai trò</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h3 class="card-title text-white" style="font-weight: 700;"><i class="fas fa-user-shield mr-2"></i>Phân quyền người dùng</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover table-striped">
                    <thead style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <tr>
                            <th style="color: #fff; font-weight: 700; font-size: 15px;">Email</th>
                            <th style="color: #fff; font-weight: 700; font-size: 15px;">Vai trò hiện tại</th>
                            <th style="width: 150px; color: #fff; font-weight: 700; font-size: 15px;" class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="color: #2c3e50; font-weight: 600; font-size: 15px;"><strong>@item.User.Email</strong></td>
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        foreach (var role in item.Roles)
                                        {
                                            <span class="badge mr-1" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: #fff; font-size: 14px; padding: 8px 14px; font-weight: 700; border-radius: 20px;">
                                                <i class="fas fa-user-tag mr-1"></i>@role
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span style="color: #e74c3c; font-weight: 600; font-size: 14px;">
                                            <i class="fas fa-exclamation-circle mr-1"></i> Chưa có vai trò
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Manage" asp-route-userId="@item.User.Id" class="btn btn-sm" title="Gán vai trò"
                                       style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #fff; font-weight: 600; padding: 8px 16px; border-radius: 20px;">
                                        <i class="fas fa-user-cog mr-1"></i> Gán vai trò
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
