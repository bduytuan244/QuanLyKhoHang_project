@model UserRolesViewModel
@{
    ViewData["Title"] = "Gán vai trò";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 25px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

        .page-header h1 {
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
        }

    .breadcrumb-custom {
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        padding: 10px 20px;
    }

        .breadcrumb-custom a {
            color: white;
            text-decoration: none;
            font-weight: 600;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

        .breadcrumb-custom .active {
            color: rgba(255,255,255,0.9);
        }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #764ba2;
    }

        .form-header h3 {
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .btn-list {
        background: rgba(255,255,255,0.9);
        color: #667eea;
        border: none;
        padding: 8px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-list:hover {
            background: white;
            color: #764ba2;
            transform: translateY(-2px);
        }

    .form-section {
        padding: 30px;
    }

    .form-label-custom {
        color: #1e3c72;
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 20px;
        display: block;
    }

    .role-checkbox-card {
        background: white;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        padding: 18px 20px;
        margin-bottom: 15px;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
    }

        .role-checkbox-card:hover {
            border-color: #667eea;
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.2);
            transform: translateX(5px);
        }

        .role-checkbox-card.checked {
            background: linear-gradient(135deg, #f0f4ff 0%, #e8f0fe 100%);
            border-color: #667eea;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.25);
        }

    .custom-control-input:checked ~ .custom-control-label::before {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: #667eea;
    }

    .custom-control-label {
        color: #2c3e50;
        font-weight: 600;
        font-size: 1.05rem;
        cursor: pointer;
        padding-left: 10px;
    }

    .role-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        margin-right: 15px;
        vertical-align: middle;
    }

    .form-footer {
        background: #f8f9fa;
        padding: 20px 30px;
        border-top: 2px solid #e0e0e0;
    }

    .btn-save {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .btn-cancel {
        background: white;
        border: 2px solid #e0e0e0;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: #5a6c7d;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #667eea;
            color: #667eea;
            transform: translateY(-2px);
        }

    .user-info-box {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-left: 5px solid #667eea;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
    }

        .user-info-box h4 {
            color: #1e3c72;
            font-weight: 700;
            font-size: 1.3rem;
            margin: 0 0 10px 0;
        }

        .user-info-box p {
            color: #5a6c7d;
            font-size: 1rem;
            margin: 0;
        }

        .user-info-box i {
            color: #667eea;
            font-size: 1.5rem;
            margin-right: 12px;
        }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-user-cog mr-2"></i>Gán Vai Trò</h1>
        <nav class="breadcrumb-custom mb-0">
            <a asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home mr-1"></i>Home
            </a>
            <span class="mx-2">/</span>
            <a asp-controller="UserRole" asp-action="Index">Gán vai trò</a>
            <span class="mx-2">/</span>
            <span class="active">Quản lý</span>
        </nav>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="form-card">
                    <div class="form-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3><i class="fas fa-user-shield mr-2"></i>Phân quyền người dùng</h3>
                            <a class="btn btn-list" asp-action="Index">
                                <i class="fas fa-list mr-1"></i>Danh sách
                            </a>
                        </div>
                    </div>

                    <form asp-action="Manage" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-section">
                            <!-- User Info -->
                            <div class="user-info-box">
                                <h4>
                                    <i class="fas fa-user-circle"></i>Thông tin người dùng
                                </h4>
                                <p><strong>Email:</strong> @Model.UserEmail</p>
                            </div>

                            <!-- Roles -->
                            <label class="form-label-custom">
                                <i class="fas fa-user-tag mr-2" style="color: #667eea;"></i>Chọn vai trò:
                            </label>

                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="role-checkbox-card @(Model.Roles[i].IsSelected ? "checked" : "")" onclick="toggleCheckbox(@i)">
                                    <div class="d-flex align-items-center">
                                        <span class="role-icon">
                                            <i class="fas fa-@GetRoleIcon(Model.Roles[i].RoleName)"></i>
                                        </span>
                                        <div class="custom-control custom-checkbox flex-grow-1">
                                            <input type="checkbox"
                                                   asp-for="Roles[@i].IsSelected"
                                                   class="custom-control-input"
                                                   id="role@(i)"
                                                   onchange="updateCardStyle(@i)" />
                                            <input type="hidden" asp-for="Roles[@i].RoleName" />
                                            <label class="custom-control-label" for="role@(i)">
                                                @Model.Roles[i].RoleName
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-save">
                                <i class="fas fa-check-circle mr-2"></i>Lưu Thay Đổi
                            </button>
                            <a asp-action="Index" class="btn btn-cancel ml-2">
                                <i class="fas fa-times mr-2"></i>Hủy Bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@functions {
    string GetRoleIcon(string roleName)
    {
        return roleName.ToLower() switch
        {
            "admin" => "user-shield",
            "sales" => "chart-line",
            "employee" => "user-tie",
            _ => "user-tag"
        };
    }
}

<script>
    function toggleCheckbox(index) {
        var checkbox = document.getElementById('role' + index);
        checkbox.checked = !checkbox.checked;
        updateCardStyle(index);
    }

    function updateCardStyle(index) {
        var checkbox = document.getElementById('role' + index);
        var card = checkbox.closest('.role-checkbox-card');
        if (checkbox.checked) {
            card.classList.add('checked');
        } else {
            card.classList.remove('checked');
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        var checkboxes = document.querySelectorAll('.custom-control-input');
        checkboxes.forEach(function(checkbox, index) {
            updateCardStyle(index);
        });
    });
</script>
