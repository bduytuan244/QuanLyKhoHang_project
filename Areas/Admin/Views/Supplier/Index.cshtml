@model List<SupplierModel>
@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        padding: 25px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
    }

        .page-header h1 {
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
        }

    .breadcrumb-custom {
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        padding: 10px 20px;
    }

        .breadcrumb-custom a {
            color: white;
            text-decoration: none;
            font-weight: 600;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

        .breadcrumb-custom .active {
            color: rgba(255,255,255,0.9);
        }

    .table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .table-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #c82333;
    }

        .table-header h3 {
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .btn-add-new {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-add-new:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .table-custom {
        margin: 0;
    }

        .table-custom thead {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        }

            .table-custom thead th {
                color: white;
                font-weight: 600;
                font-size: 0.95rem;
                padding: 15px 12px;
                border: none;
                vertical-align: middle;
            }

        .table-custom tbody tr {
            transition: all 0.3s ease;
        }

            .table-custom tbody tr:hover {
                background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
                transform: scale(1.01);
            }

        .table-custom tbody td {
            padding: 15px 12px;
            vertical-align: middle;
            color: #2c3e50;
            font-size: 0.95rem;
        }

    .supplier-name {
        color: #1e3c72;
        font-weight: 600;
        font-size: 1rem;
    }

        .supplier-name i {
            color: #dc3545;
            margin-right: 8px;
        }

    .supplier-info {
        color: #5a6c7d;
        font-weight: 500;
    }

        .supplier-info i {
            width: 20px;
            color: #7f8c8d;
            margin-right: 5px;
        }

    .btn-action {
        padding: 6px 12px;
        font-size: 0.9rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-edit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-delete {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            color: white;
        }

    .empty-state {
        padding: 60px 20px;
        text-align: center;
    }

        .empty-state i {
            color: #bdc3c7;
            margin-bottom: 20px;
        }

        .empty-state p {
            color: #7f8c8d;
            font-size: 1.1rem;
            margin: 0;
        }
    /* --- SEARCH BAR STYLE --- */
    .search-container {
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        margin-bottom: 25px;
    }

    .search-input-group {
        border: 1px solid #e0e0e0;
        border-radius: 50px;
        padding: 5px;
        transition: all 0.3s;
        background: #f8f9fa;
    }

        .search-input-group:focus-within {
            border-color: #dc3545; /* Viền đỏ khi focus */
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            background: white;
        }

    .search-input {
        border: none;
        background: transparent;
        padding-left: 15px;
        font-size: 1rem;
        height: 40px;
    }

        .search-input:focus {
            background: transparent;
            box-shadow: none;
        }

    .btn-search-custom {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); /* Nút tìm màu đỏ */
        color: white;
        border-radius: 50px;
        padding: 8px 25px;
        border: none;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-search-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(220, 53, 69, 0.4);
            color: white;
        }

    .btn-reset-custom {
        color: #6c757d;
        background: white;
        border: 1px solid #6c757d;
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 600;
        transition: all 0.3s;
        margin-left: 10px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-truck-loading mr-2"></i>Danh Sách Nhà Cung Cấp</h1>
        <nav class="breadcrumb-custom mb-0">
            <a asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home mr-1"></i>Home
            </a>
            <span class="mx-2">/</span>
            <span class="active">Nhà cung cấp</span>
        </nav>
    </div>
</div>
<div class="search-container">
    <form asp-action="Index" method="get">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="input-group search-input-group">
                    <input type="text" name="searchString" class="form-control search-input"
                           placeholder="Tìm tên, địa chỉ, sđt, email..."
                           value="@ViewData["CurrentFilter"]">
                    <div class="input-group-append">
                        <button class="btn btn-search-custom" type="submit">
                            <i class="fas fa-search mr-1"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-reset-custom">
                        <i class="fas fa-times mr-1"></i> Xóa bộ lọc
                    </a>
                </div>
            }
        </div>
    </form>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="table-card">
            <div class="table-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3><i class="fas fa-truck mr-2"></i>Quản lý nhà cung cấp</h3>
                    <a class="btn btn-add-new" asp-controller="Supplier" asp-action="Create">
                        <i class="fas fa-plus mr-2"></i>Thêm mới
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th style="width: 60px;">STT</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Địa chỉ</th>
                            <th style="width: 150px;">Điện thoại</th>
                            <th style="width: 200px;">Email</th>
                            <th style="width: 150px;" class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int stt = 1;
                            foreach (var s in Model)
                            {
                                <tr>
                                    <td><strong>#@stt</strong></td>
                                    <td class="supplier-name">
                                        <i class="fas fa-building"></i>@s.Name
                                    </td>
                                    <td class="supplier-info">
                                        <i class="fas fa-map-marker-alt"></i>
                                        @if (!string.IsNullOrEmpty(s.Address))
                                        {
                                            @(s.Address.Length > 50 ? s.Address.Substring(0, 50) + "..." : s.Address)
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td class="supplier-info">
                                        <i class="fas fa-phone"></i>
                                        @if (!string.IsNullOrEmpty(s.Phone))
                                        {
                                            @s.Phone
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td class="supplier-info">
                                        <i class="fas fa-envelope"></i>
                                        @if (!string.IsNullOrEmpty(s.Email))
                                        {
                                            @s.Email
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-action btn-edit" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@s.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này?');">
                                            <button type="submit" class="btn btn-action btn-delete ml-1" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <i class="fas fa-truck-loading fa-4x"></i>
                                        <p>Chưa có nhà cung cấp nào trong hệ thống</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
