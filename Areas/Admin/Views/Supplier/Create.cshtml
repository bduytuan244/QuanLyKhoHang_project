@model SupplierModel
@{
    ViewData["Title"] = "Thêm nhà cung cấp";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        padding: 25px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
    }

        .page-header h1 {
            color: white;
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
        }

    .breadcrumb-custom {
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        padding: 10px 20px;
    }

        .breadcrumb-custom a {
            color: white;
            text-decoration: none;
            font-weight: 600;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

        .breadcrumb-custom .active {
            color: rgba(255,255,255,0.9);
        }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        padding: 20px 25px;
        border-bottom: 3px solid #c82333;
    }

        .form-header h3 {
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin: 0;
        }

    .btn-list {
        background: rgba(255,255,255,0.9);
        color: #dc3545;
        border: none;
        padding: 8px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-list:hover {
            background: white;
            color: #c82333;
            transform: translateY(-2px);
        }

    .form-label-custom {
        color: #1e3c72;
        font-weight: 600;
        font-size: 1.05rem;
        margin-bottom: 10px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 18px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control-custom:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            outline: none;
        }

        .form-control-custom::placeholder {
            color: #bdc3c7;
        }

    .form-section {
        padding: 30px;
    }

    .form-footer {
        background: #f8f9fa;
        padding: 20px 30px;
        border-top: 2px solid #e0e0e0;
    }

    .btn-save {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .btn-cancel {
        background: white;
        border: 2px solid #e0e0e0;
        padding: 12px 35px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        color: #5a6c7d;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            border-color: #dc3545;
            color: #dc3545;
            transform: translateY(-2px);
        }

    .required-star {
        color: #e74c3c;
        font-weight: 700;
    }

    .form-hint {
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-truck-loading mr-2"></i>Thêm Nhà Cung Cấp</h1>
        <nav class="breadcrumb-custom mb-0">
            <a asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-home mr-1"></i>Home
            </a>
            <span class="mx-2">/</span>
            <a asp-controller="Supplier" asp-action="Index">Nhà cung cấp</a>
            <span class="mx-2">/</span>
            <span class="active">Thêm mới</span>
        </nav>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="form-card">
                    <div class="form-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3><i class="fas fa-truck mr-2"></i>Thông tin nhà cung cấp</h3>
                            <a class="btn btn-list" asp-controller="Supplier" asp-action="Index">
                                <i class="fas fa-list mr-1"></i>Danh sách
                            </a>
                        </div>
                    </div>

                    <form asp-controller="Supplier" asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-section">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label-custom">
                                            <i class="fas fa-building mr-2" style="color: #dc3545;"></i>Tên nhà cung cấp
                                            <span class="required-star">*</span>
                                        </label>
                                        <input asp-for="Name"
                                               class="form-control form-control-custom"
                                               placeholder="VD: Công ty TNHH ABC" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                        <small class="form-hint">
                                            <i class="fas fa-info-circle"></i> Tên công ty hoặc cá nhân cung cấp
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label-custom">
                                            <i class="fas fa-phone mr-2" style="color: #dc3545;"></i>Số điện thoại
                                        </label>
                                        <input asp-for="Phone"
                                               class="form-control form-control-custom"
                                               placeholder="VD: 0123456789" />
                                        <small class="form-hint">
                                            <i class="fas fa-mobile-alt"></i> Số điện thoại liên hệ
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label-custom">
                                            <i class="fas fa-envelope mr-2" style="color: #dc3545;"></i>Email
                                        </label>
                                        <input asp-for="Email"
                                               type="email"
                                               class="form-control form-control-custom"
                                               placeholder="VD: supplier@company.com" />
                                        <small class="form-hint">
                                            <i class="fas fa-at"></i> Email liên hệ và gửi thông báo
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label-custom">
                                            <i class="fas fa-map-marker-alt mr-2" style="color: #dc3545;"></i>Địa chỉ
                                        </label>
                                        <input asp-for="Address"
                                               class="form-control form-control-custom"
                                               placeholder="VD: 123 Đường ABC, Quận 1, TP.HCM" />
                                        <small class="form-hint">
                                            <i class="fas fa-location-dot"></i> Địa chỉ trụ sở chính
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-save">
                                <i class="fas fa-check-circle mr-2"></i>Lưu Nhà Cung Cấp
                            </button>
                            <a asp-action="Index" asp-controller="Supplier" class="btn btn-cancel ml-2">
                                <i class="fas fa-times mr-2"></i>Hủy Bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
